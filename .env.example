# Copy this file to `.env` and update values for your environment.
# DO NOT commit real secrets to version control. Use secure secret storage for production.

## Database (example)
# Example: postgresql://user:password@host:5432/dbname?schema=public
DATABASE_URL=postgresql://user:password@host:5432/dev_db?schema=public
DIRECT_URL=postgresql://user:password@host:5432/dev_db
# Prisma runtime connection behavior (development-safe defaults)
# Set true to prefer DIRECT_URL over DATABASE_URL at runtime.
# Default false is safer for Docker/local networks using pooler URLs.
PRISMA_PREFER_DIRECT_URL=false
# Startup retries for transient DB/network delays
PRISMA_CONNECT_RETRIES=8
PRISMA_CONNECT_RETRY_DELAY_MS=2000

## JWT / Auth
JWT_ACCESS_SECRET=change_this_in_production
JWT_REFRESH_SECRET=change_this_in_production
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

## Application
PORT=4000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000
# Email DNS validation: default disabled for local development. Set to 'true' to enable MX/A checks.
EMAIL_DNS_CHECK=false

## Frontend
NEXT_PUBLIC_API_URL=http://localhost:4000/api
NEXT_PUBLIC_API_TIMEOUT_MS=15000
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id_here
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here
RECAPTCHA_MIN_SCORE=0.5
RECAPTCHA_SIGNUP_ACTION=signup
RECAPTCHA_LOGIN_ACTION=login
RECAPTCHA_ADMIN_SIGNUP_ACTION=admin_signup
RECAPTCHA_ADMIN_LOGIN_ACTION=admin_login
# Optional override: allow Google "browser-error" responses.
# Defaults to true in non-production and false in production when unset.
RECAPTCHA_ALLOW_BROWSER_ERROR=false
# Toggle reCAPTCHA on/off
NEXT_PUBLIC_RECAPTCHA_ENABLED=true
RECAPTCHA_ENABLED=true

## Firebase (client-side web config - public keys)
# Find these in Firebase Console → Project Settings → General
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

## Third-party API keys
GEMINI_API_KEY=your_gemini_api_key_here
RECAPTCHA_SECRET=your_recaptcha_secret_here

## Text.lk SMS Gateway
TEXTLK_API_TOKEN=your_textlk_api_token_here
TEXTLK_SENDER_ID=TextLKDemo

## Supabase (optional – client-side Storage & Auth)
# Public Supabase keys for client-side usage (do NOT commit server keys to public repos)
NEXT_PUBLIC_SUPABASE_URL=https://your-supabase-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_public_anon_key
NEXT_PUBLIC_SUPABASE_STORAGE_BUCKET=avatars

# Note: Firebase is kept for push notification support; Supabase is used here for Storage (avatars).
